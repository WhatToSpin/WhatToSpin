{
  "name": "what-to-spin",
  "version": "0.2.0",
  "main": "src/main.js",
  "homepage": ".",
  "author": "Ethan Burmane <ethanburmane@gmail.com>",
  "description": "Desktop application for storing your vinyl collection and choosing what to spin next.",
  "license": "ISC",
  "keywords": [
    "electron",
    "desktop",
    "music",
    "spin",
    "vinyl",
    "collection",
    "album"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ethanburmane/what-to-spin.git"
  },
  "scripts": {
    "debug-build": "electron-builder --dir --publish=never",
    "start": "electron .",
    "dev": "electron . --dev",
    "save": "mkdir ~/Library/Application\\ Support/what-to-spin/saved-covers/ && mv ~/Library/Application\\ Support/what-to-spin/covers/* ~/Library/Application\\ Support/what-to-spin/saved-covers/ && mv ~/Library/Application\\ Support/what-to-spin/collection.json ~/Library/Application\\ Support/what-to-spin/saved-collection.json",
    "restore": "rm -rf ~/Library/Application\\ Support/what-to-spin/covers/* && rm -f ~/Library/Application\\ Support/what-to-spin/collection.json && mv ~/Library/Application\\ Support/what-to-spin/saved-covers/* ~/Library/Application\\ Support/what-to-spin/covers/ && mv ~/Library/Application\\ Support/what-to-spin/saved-collection.json ~/Library/Application\\ Support/what-to-spin/collection.json && rmdir ~/Library/Application\\ Support/what-to-spin/saved-covers/",
    "test": "playwright test",
    "test:add": "playwright test tests/01-add.test.js",
    "test:move": "playwright test tests/02-move.test.js",
    "test:edit": "playwright test tests/03-edit.test.js",
    "test:delete": "playwright test tests/04-delete.test.js",
    "test:headed": "playwright test --headed",
    "clear:tests": "[ -d test-results/ ] && rm -rf test-results/ ; [ -d playwright-report/ ] && rm -rf playwright-report/",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --mac --win --linux",
    "dist": "npm run build",
    "release": "npx electron-builder --publish=always",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf dist"
  },
  "build": {
    "appId": "com.whatospin.app",
    "productName": "What to Spin",
    "copyright": "Copyright Â© 2024 ${author}",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "utils/**/*",
      "node_modules/**/*",
      "package.json",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!dist",
      "!build",
      "!scripts"
    ],
    "mac": {
      "category": "public.app-category.entertainment",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "gatekeeperAssess": false,
      "hardenedRuntime": false
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "publisherName": "What to Spin",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "What to Spin",
      "include": "build/installer.nsh"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "AudioVideo",
      "synopsis": "Desktop application for storing your vinyl collection and choosing what to spin next.",
      "desktop": {
        "Name": "What to Spin",
        "Comment": "Desktop application for storing your vinyl collection and choosing what to spin next.",
        "Categories": "AudioVideo;Audio;Music;",
        "Keywords": "music;audio;spin;album;"
      }
    },
    "publish": [
      {
        "provider": "github",
        "owner": "ethanburmane",
        "repo": "what-to-spin",
        "releaseType": "release"
      }
    ]
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "@playwright/test": "^1.54.2",
    "album-art": "^4.0.0",
    "electron-updater": "^6.1.7",
    "playwright": "^1.54.2"
  }
}
